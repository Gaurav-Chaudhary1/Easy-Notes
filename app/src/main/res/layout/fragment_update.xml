<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".notefragments.UpdateFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/updateToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/add_menu"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Update Note"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/et_updateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Heading"
        android:inputType="text"
        android:padding="14dp"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:textColorHint="#DDDDDD"
        android:textSize="34sp"
        android:fontFamily="@font/cabin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateToolbar"
        app:layout_constraintVertical_bias="0.011" />

    <EditText
        android:id="@+id/et_UpdateSummary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Summary"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:linksClickable="false"
        android:padding="14dp"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textColorHint="#DDDDDD"
        android:textSize="20sp"
        android:fontFamily="@font/cabin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_updateTitle"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>